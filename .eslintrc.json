{
	"extends": ["airbnb-base", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["prettier"],
	"env": {
		"es6": true,
		"node": true
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{ "trailingComma": "es5", "singleQuote": true }
		],
		"func-names": 0,
		"max-len": ["error", 120, 4]
	}
}
